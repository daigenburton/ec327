<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:padding="80dp">


    <requestFocus />


    <!-- Button for settings menu -->
    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/settings_button" />

    <!-- Button for menu to select sprite skin -->
    <Button
        android:id="@+id/skin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settings"
        android:text="@string/skins_button" />

    <!-- Button to play game -->
    <Button
        android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/skin"
        android:onClick="goToVoiceActivity"
        android:text="@string/play_button" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="700dp"
        android:layout_height="100dp"
        tools:ignore="ContentDescription"
        app:srcCompat="@drawable/placeholder_2"
        />

</RelativeLayout>
